class Solution {
public:
    void FloyardWarshall( vector<vector<long long >>&adjMatrix,vector<char>& original, vector<char>& changed, vector<int>& cost){
        //first build adjancency matrix
        for(int i=0;i<original.size();i++)
        {
            int s=original[i]-'a';
            int t=changed[i]-'a';
            adjMatrix[s][t]=min(adjMatrix[s][t],(long long)cost[i]);
        }
        //just write Floyard warshall Code
        for(int k=0;k<26;k++){
            for(int i=0;i<26;i++)
            {
                for(int j=0;j<26;j++)
                {
                    adjMatrix[i][j]=min(adjMatrix[i][j],adjMatrix[i][k]+adjMatrix[k][j]);
                }
            }
        }
    }
    long long minimumCost(string source, string target, vector<char>& original, vector<char>& changed, vector<int>& cost) {
        //This question is based on shortest path with multiple source by Floyard Warshall
        //Lets first build 26x26 matrix to find out shortest path 
        vector<vector<long long >>adjMatrix(26,vector<long long>(26,INT_MAX));
        //calling fxn to update adjacency matrix
        FloyardWarshall(adjMatrix,original,changed,cost);
        long long ans=0;
        for(int i=0;i<source.length();i++)
        {
            if(source[i]==target[i])
            continue; //no where to go
            if(adjMatrix[source[i]-'a'][target[i]-'a']==INT_MAX)return -1; //no way to go that point
            ans+=adjMatrix[source[i]-'a'][target[i]-'a'];
        }
        return ans;
    }
};
