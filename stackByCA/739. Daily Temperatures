class Solution {
public:
    vector<int> dailyTemperatures(vector<int>& temperatures) {
        //here we have to find out the nearest greater right so simple same formula
        stack<int>st;
        int n=temperatures.size();
        vector<int>NGR(n);
        for(int i=0;i<n;i++)
        {
            while(!st.empty() && temperatures[st.top()]<temperatures[i]){
                NGR[st.top()]=i-st.top();
                st.pop();
            }
            st.push(i);
        }
        return NGR;
    }
};
