/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int height(TreeNode* root){
        if(!root)return 0;
        //Left se pucho uski height kitni hai
        int leftH=height(root->left);
        int rightH=height(root->right);
        //Node Be Like:Now mai apna total Batata hu height 
        return 1+max(leftH,rightH);
    }
    bool isBalanced(TreeNode* root) {
        //Height of Balance Tree Application qus 
        //Base Case
        if(!root)return true;
        //Step.1 Find leftH
        int LeftH=height(root->left);
        //Step-2 Find RightH
        int RightH=height(root->right);
        //Now Find abs Diff to check tree is Balances or not
        if((abs(RightH-LeftH))>1)return false;
        //Now chechk for left and right if diffrence is <=1
        return isBalanced(root->left)&&isBalanced(root->right);
    }
};
